{
	"name": "impec-js",
	"type": "module",
	"main": "dist/impec-js.js",
	"description": "A small frontend library to render SPA using Builder design pattern with TypeScript",
	"types": "dist/index.d.ts",
	"version": "0.0.2",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/damienld22/impecJS.git"
	},
	"keywords": ["impec", "impec-js", "frontend library", "typescript"],
	"author": "Damien Le Dantec <damien-le-dantec@hotmail.fr>",
	"license": "ISC",
	"bin": {
		"create-impec-js": "bin/create-impec-js"
	},
	"files": [
		"dist",
		"bin"
	],
	"exports": {
		".": {
			"import": {
				"default": "./dist/impec-js.js",
				"types": "./dist/index.d.ts"
			},
			"require": {
				"default": "./dist/impec-js.cjs",
				"types": "./dist/index.d.ts"
			}
		}
	},
	"scripts": {
		"build": "tsc && vite build",
		"watch": "vite build --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "pnpm biome lint .",
		"lint:fix": "pnpm biome lint . --apply",
		"prepublishOnly": "pnpm build && cp ../../README.md README.md",
		"prepack": "pnpm build",
		"pack": "pnpm pack"
	},
	"devDependencies": {
		"@maverick-js/signals": "^5.11.4",
		"@types/jsdom": "^21.1.6",
		"@types/node": "^20.11.27",
		"jsdom": "^24.0.0",
		"typescript": "^5.2.2",
		"vite": "^5.0.0",
		"vite-plugin-dts": "^3.7.3",
		"vitest": "^1.4.0"
	}
}
